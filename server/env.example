# =============================================================================
# SMART-TASK-AI2 Server Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection string (SQLite for development, PostgreSQL/MySQL for production)
DATABASE_URL="file:./dev.db"

# =============================================================================
# JWT & SECURITY CONFIGURATION
# =============================================================================
# JWT secret key (minimum 32 characters, use crypto.randomBytes(32).toString('hex'))
JWT_SECRET="<REPLACE_ME_WITH_32_CHAR_SECRET>"

# Cookie signing secret (minimum 16 characters, use crypto.randomBytes(16).toString('hex'))
COOKIE_SECRET="<REPLACE_ME_WITH_16_CHAR_SECRET>"

# CSRF protection secret (minimum 16 characters, use crypto.randomBytes(16).toString('hex'))
CSRF_SECRET="<REPLACE_ME_WITH_16_CHAR_SECRET>"

# Optional: Old cookie secret for rotation (if implementing key rotation)
# COOKIE_SECRET_OLD="<REPLACE_ME_WITH_16_CHAR_SECRET>"

# =============================================================================
# CORS & URL CONFIGURATION
# =============================================================================
# Frontend origin for CORS (development)
CORS_ORIGIN="http://localhost:5173"

# Note: PRODUCTION_API_URL is only used by client build, not server

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port
PORT=3000

# Node environment
NODE_ENV="development"

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# General rate limiting (15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Login rate limiting (15 minutes)
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT algorithm (HS256, HS384, HS512)
JWT_ALGORITHM="HS256"

# JWT token expiry times
JWT_ACCESS_TOKEN_EXPIRY="10m"
JWT_REFRESH_TOKEN_EXPIRY="7d"
